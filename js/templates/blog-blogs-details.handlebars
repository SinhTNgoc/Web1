{{#each data}}
  <div class="py-3 blog">
    <h4>{{name}}</h4>
    <div>by
      {{author}}
      in
      <a href="#">Blog. {{category.name}}</a>
      on
      {{date}}
      Hits: 210
      <a href="#">Comments({{comments.length}})</a>
    </div>
    <div class="py-3">
      <img src="{{thumbpath}}" class="img-thumbnail img-blog" alt="" />
      <p>
        {{{description}}}
      </p>
      <br />
      <br />
    </div>
  </div>
  <div class="py-3">
    <h4 class="text-dark">Leave your comment</h4>
    <h4 class="text-dark">Post comment as a guest</h4>
    <form
      action=""
      method="POST"
      class="mb-2"
      id="form-comment"
      onsubmit="return addComment()"
      data-blog-id="{{id}}"
    >
      <div class="row">
        <div class="form-group col">
          <label for="name">Name (Required)</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control form-control-sm"
            placeholder=""
            required
          />

        </div>
        <div class="form-group col">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control form-control-sm"
            placeholder=""
            required
          />

        </div>
        <div class="form-group col">

        </div>
      </div>
      <div class="row">
        <div class="form-group col">
          <label for="comment"></label>
          <textarea
            class="form-control form-control-sm"
            name="comment"
            id="comment"
            rows="3"
            required
          ></textarea>
        </div>
      </div>
      <div class="row mx-0">
        <div class="form-check col">
          <label class="form-check-label">
            <input
              type="checkbox"
              class="form-check-input"
              name="agree"
              id="agree"
              value="false"
              required
            />
            Agree to terms and conditions.
          </label>
        </div>
        <div class="col text-right">
          <button type="submit" class="btn btn-link btn-sm">Submit Comment</button>
        </div>
      </div>
    </form>
    <div class="bg-dark text-uppercase p-1 mb-3">
      Comments ({{comments.length}})
    </div>
    {{#each comments}}
      <div class="row mx-0">
        <div>
          <small><strong>{{name}}</strong> {{date}}</small>

        </div>
        <p>{{summary}}</p>
        <hr />
      </div>
    {{/each}}
  </div>

{{/each}}